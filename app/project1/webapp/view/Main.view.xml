<mvc:View
	controllerName="project1.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<FlexBox justifyContent="Center"
					 alignItems="Center"
					 height="100%">
		<GenericTile id="movieScenario" class="sapUiTinyMarginBegin tileLayout" header="Movie"
								 subheader="Scenario" press="onNavToScenarioPress">
			<TileContent>
				<ImageContent src="sap-icon://video"/>
			</TileContent>
		</GenericTile>

		<GenericTile id="CAPScenario" class="sapUiLargeMarginBegin tileLayout" header="CAP"
								 subheader="Scenario" press="onNavToScenarioPress">
			<TileContent>
				<ImageContent src="sap-icon://document-text"/>
			</TileContent>
		</GenericTile>
	</FlexBox>
</mvc:View>
