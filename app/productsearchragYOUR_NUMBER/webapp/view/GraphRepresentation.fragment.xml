<core:FragmentDefinition
    displayBlock="true"
    height="100%"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:g="sap.suite.ui.commons.networkgraph"
    xmlns:l="sap.suite.ui.commons.networkgraph.layout"
>
    <ScrollContainer
        width="100%"
        height="100%"
        vertical="true"
        focusable="true"
    >
        <Panel
            id="WorkflowGraphPanel"
            expandable="false"
            expanded="true"
            headerText="{i18n>workflowPanelHeader}"
            width="auto"
            class="sapUiSmallMargin"
        >
            <content>
                <g:Graph
                    enableWheelZoom="false"
                    id="applicationFlowGraph"
                    orientation="TopBottom"
                    height="100%"
                    width="100%"
                    nodes="{localModel>/applicationFlowGraph/nodes}"
                    lines="{localModel>/applicationFlowGraph/lines}"
                    groups="{localModel>/applicationFlowGraph/groups}"
                >
                    <g:statuses>
                        <g:Status
                            key="CustomStandard"
                            title="Standard"
                            backgroundColor="#0070f2"
                            borderColor="sapUiContentShadowColor"
                            hoverBorderColor="sapUiContentShadowColor"
                        />
                        <g:Status
                            key="CustomInactive"
                            title="Inactive"
                            backgroundColor="#a9b4be"
                            borderColor="#a9b4be"
                            hoverBorderColor="sapUiContentShadowColor"
                        />
                        <g:Status
                            key="CustomStandardGroup"
                            title="Standard"
                            borderColor="#a9b4be"
                            backgroundColor="#a9b4be"
                            hoverBackgroundColor="sapUiNeutralBorder"
                            hoverContentColor="#a9b4be"
                            contentColor="sapUiFieldHelpBackground"
                            useFocusColorAsContentColor="true"
                            legendColor="sapUiContentShadowColor"
                        />
                    </g:statuses>
                    <g:layoutAlgorithm>
                        <l:LayeredLayout />
                    </g:layoutAlgorithm>
                    <g:nodes>
                        <g:Node
                            key="{localModel>key}"
                            group="{localModel>group}"
                            title="{localModel>title}"
                            titleLineSize="3"
                            showExpandButton="false"
                            icon="{localModel>icon}"
                            attributes="{path:'localModel>attributes', templateShareable:true}"
                            status="{localModel>status}"
                            busy="{localModel>busy}"
                        >
                            <g:attributes>
                                <g:ElementAttribute
                                    label="{localModel>label}"
                                    value="{localModel>value}"
                                />
                            </g:attributes>
                        </g:Node>
                    </g:nodes>
                    <g:lines>
                        <g:Line
                            from="{localModel>from}"
                            to="{localModel>to}"
                            title="{localModel>title}"
                            status="{localModel>status}"
                        />
                    </g:lines>
                    <g:groups>
                        <g:Group
                            key="{localModel>key}"
                            status="{localModel>status}"
                            title="{localModel>title}"
                            busy="{localModel>busy}"
                        />
                    </g:groups>
                </g:Graph>
            </content>
        </Panel>
    </ScrollContainer>
</core:FragmentDefinition>
